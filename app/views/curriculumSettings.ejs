<!DOCTYPE html>
<html lang="en" ng-app="ors_app">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
	<meta name="keywords" content="">
	<title>Curriculum Settings</title>
	<link rel="stylesheet" href="/css/main.css">
</head>
<body>
	<div ng-include="'/views/header.ejs'"></div>
	<div class="container" ng-controller= "curriculumsCtrl">
		<div class="twelve column">
			<div class="curriculum_setting_list">
				<a href="/administrator/curriculum">back</a>
				<h3 class="content_title">Settings</h3>
				<form class="curriculum_setting">
					<div class="input_groups">
						<input type="text" ng-model="curYear">
					</div>
					<h4>Departments<span href="" class="content_title_btn newDepartment--show">Add</span></h4>
					<div class="overlay"></div>
					<div class="newDepartment boxShadow six column">
						<div class="input_groups">
							<label for="">Department Name</label>
							<input type="text" ng-model="dep.depName">
						</div>
						<div class="input_groups">
							<label for="">Department Description</label>
							<input type="text" ng-model="dep.depDes">
						</div>
						<div class="btn btn--blue" ng-click="addDep()">Add</div>
					</div>
					<div class="department_settings" ng-repeat="department in curriculum">
						<div class="input_groups">
							<input type="text" class="input_name" value="{{department.department_name}}">
						</div>
						<div class="input_groups">
							<input type="text" class="input_des" value="{{department.department_des}}">
						</div>
						<table>
							<thead>
								<tr>
									<th>
										<label for="">Course code</label>
										<input type="text" class="input_name" ng-model="dep.courseName">
									</th>
									<th>
										<label for="">Course description</label>
										<input type="text" class="input_des" ng-model="dep.courseDes">
									</th>
									<th>
										<label for="">years</label>
										<input type="number" class="input_units" ng-model="dep.courseYears">
									</th>
									<th>
										<label for="">terms</label>
										<input type="number" class="input_units" ng-model="dep.courseTerms">
									</th>
									<th><button class="btn btn--blue" ng-click="addCourse(department._id, dep)">Add</button></th>
									<th><button class="btn btn--green">Update</button></th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<th>Course Code</th>
									<th>Course description</th>
									<th># of years</th>
									<th># of terms</th>
								</tr>
								<tr ng-repeat="course in department.courses">
									<td>{{course.course_name}}</td>
									<td>{{course.course_des}}</td>
									<td>{{course.totalYears}}</td>
									<td>{{course.totalTerms}}</td>
									<td><button class="btn btn--orange" ng-click="editCourse(course._id)">Edit</button></td>
									<td><button class="btn btn--red" ng-click="deleteCourse(department._id, course)">Delete</button></td>
								</tr>
							</tbody>
						</table>
					</div>
				</form>
			</div>	
		</div>
	</div>
	<div ng-include="'/views/footer.ejs'"></div>

<script src="/lib/jquery-2.1.4.min.js"></script>
<script src="/lib/angular.min.js"></script>
<script src="/js/controllers/curriculumsCtrl.js"></script>
<script src="/js/admin.js"></script>
</body>
</html>