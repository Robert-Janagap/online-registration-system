<!DOCTYPE html>
<html lang="en" ng-app = "ors_app">
<head>
	<meta charset="UTF-8">
	<title>Curriculum</title>
	<link rel="stylesheet" href="/css/main.css">
</head>
<body>
	<div class="header"></div>
	<div class="container" ng-controller ="curriculumsCtrl">
		<div class="twelve column">
			<article class="row">
				<div class="department_mnt">
					<div class="row">
						<h3 class="content_title">Curriculum{{curriculums.school_year}}</h3>
					</div>
					<table>
						<thead>
							<tr>
								<th>Department Code</th>
								<th>Department Description</th>
								<th>Course Code</th>
								<th>Code Description</th>
								<th># of Years</th>
								<th># of Terms</th>
								<th><a href="/departments/settings">settings</a></th>
							</tr>
						</thead>
						<tbody>
							<tr ng-repeat="department in curriculums">
								<td class="department_mnt_dep">{{department.departments.department_name}}</td>
								<td class="department_mnt_dep">{{department.departments.department_des}}</td>
								<td>
									<div ng-repeat="courses in department.departments.courses">
										<div class="department_mnt_course">{{courses.course_name}}</div>	
									</div>
								</td>
								<td>
									<div ng-repeat="courses in department.departments.courses">
										<div class="department_mnt_course">{{courses.course_des}}</div>	
									</div>
								</td>
								<td>
									<div ng-repeat="year_levels in department.departments.courses.year_levels">
										<div class="department_mnt_course">{{year_levels.year_levels.year_level}}</div>	
									</div>
								</td>
								<td>
									<div class="department_mnt_course">{{department.departments.courses.year_levels.terms.term}}</div>
								</td>
								<td>
									<div class="department_mnt_course"><div class="department_subjects--show">Subjects</div></div>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</article>
			<div class="department--overlay"></div>
			<div class="department_subjects">
				<div class="btn--close department_subjects--close">X</div>
				<ul>
					<li>
						<span>1</span>
					</li>
					<li>
						<span>2</span>
					</li>
					<li>
						<span>3</span>
					</li>
					<li>
						<span>4</span>
					</li>
				</ul>
				<div class="department_subjects_mnt">
					<span>1st semester</span><span>2nd semester</span>
					<table>
						<thead>
							<tr>
								<th>
									<label for="">Subject code</label>
									<input type="text" class="input_name">
								</th>
								<th>
									<label for="">Description</label>
									<input type="text" class="input_des">
								</th>
								<th>
									<label for="">Units</label>
									<input type="text" class="input_units">
								</th>
								<th>
									<label for="">Cost/Units</label>
									<input type="text" class="input_cpu">
								</th>
								<th>
									<label for="">Pre-requisite</label>
									<input type="text" class="input_preRequisite">
								</th>
								<th>
									<button class="btn btn--blue">Add</button>
								</th>
								<th>
									<button class="btn btn--green">Update</button>
								</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<th>Subject code</th>
								<th>Description</th>
								<th>Units</th>
								<th>Cost/Units</th>
								<th>Pre-requisite</th>
							</tr>
							<tr>
								<td>Addbase</td>
								<td>Addvance Database</td>
								<td>3</td>
								<td><span>P</span>30</td>
								<td>Copro2</td>
								<td><button class="btn btn--orange">Edit</button></td>
								<td><button class="btn btn--red">Delete</button></td>
							</tr>
							<tr>
								<td>Addbase</td>
								<td>Addvance Database</td>
								<td>3</td>
								<td><span>P</span>30</td>
								<td>Copro2</td>
								<td><button class="btn btn--orange">Edit</button></td>
								<td><button class="btn btn--red">Delete</button></td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
<script src="/lib/angular.min.js"></script>
<script src="/js/controllers/curriculumsCtrl.js"></script>
<script src="/lib/jquery-1.11.1.min.js"></script>
<script src="/js/admin.js"></script>
</body>
</html>