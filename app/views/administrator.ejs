<!DOCTYPE html>
<html lang="en" ng-app="ors_app">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
	<meta name="keywords" content="">
	<title>Administrator</title>
	<link rel="stylesheet" href="/css/main.css">
</head>
<body>
	<div ng-include="'/views/header.ejs'"></div>
	<div class="curriculum_add--overlay"></div>
	<div class="container admin">
		<div class="three column admin_sidebar boxShadow ">
			<div class="person">
				<div class="person_image"><img src="img/me.png" alt=" Profile picture "></div>
				<div class="person_name">Robert Janagap</div>
				<div class="person_role">Administrator</div>
			</div>
			<div class="admin_sidebarNav">
				<ul>
					<li class="admin_sidebarNav--list">
						<a class="admin_sidebarNav--item">Curriculum</a>
					</li>
					<li class="admin_sidebarNav--list">
						<a class="admin_sidebarNav--item">Assestments</a>
					</li>
					<li class="admin_sidebarNav--list">
						<a class="admin_sidebarNav--item">Reports</a>
					</li>
					<li class="admin_sidebarNav--list">
						<a class="admin_sidebarNav--item">Blog</a>
					</li>
				</ul>
			</div>
		</div>
		<div class="nine column pull--right">
			<article class="content row boxShadow">
				<div class="row">
					<h3 class="content_title">Curriculum<span href="" class="department_add--show content_title_btn">Add</span></h3>
				</div>
				<div class="curriculum four column">
					<div class="curriculum_box cf">
						<div class="tag"><h3>2015</h3></div>
						<div class="tag">Curriculum</div>
						<div class="curriculum_box--overlay">
							<div class="curriculum_box_btn"><a href="/administrator/curriculum">View</a></div>
						</div>
					</div>
				</div>
			</article>
			<article class="content row boxShadow" ng-controller="assestmentsCtrl">
				<div class="row">
					<h3 class="content_title">Assestment<span href="" class="assestment--overlayShow content_title_btn ">Add</span></h3>
				</div>
				<div class="assestment">
					<div class="assestment--overlay">
						<form action="" class="assestment_form row">
							<div class="btn--close assestment--overlayClose">X</div>
							<div class="input_groups">
								<label for="fee_label">Type of School Fee</label>
								<input type="text" value="{{typeOfFee}}">
							</div>
							<div class="assestment_mtn row">
								<table class=" twelve column">
									<thead>
										<tr>
											<th>
												<label for="fee_name">Fee name</label>
												<input type="text" ng-model="fee.fee_name">
											</th>
											<th>
												<label for="fee_amount">Fee amount</label>
												<input type="text" ng-model="fee.amount">
											</th>
											<th>
												<div class="btn btn--blue" ng-click="newFee(typeOfFee_id)">Add</div>
											</th>
											<th>
												<div class="btn btn--green">Update</div>
											</th>
										</tr>
									</thead>
									<tbody class="assestment_mtn_body">
										<tr>
											<th>Name</th>
											<th>Amount</th>
											<th>date created</th>
										</tr>
										<tr ng-repeat="fee in fees.fees">
											<td>{{fee.fee_name}}</td>
											<td><span>P</span>{{fee.amount}}</td>
											<td>{{fee.date_created}}</td>
											<td><div class="btn btn--orange">Edit</div></td>
											<td><div class="btn btn--red" ng-click="deleteFee(typeOfFee_id, fee)">Delete</div></td>
										</tr>
									</tbody>
								</table>
							</div>
						</form>
					</div>
					<table class="assestment_fees twelve column">
						<thead>
							<tr>
								<th>Type of Fee</th>
								<th>Total Amount</th>
							</tr>
						</thead>
						<tbody>
							<tr ng-repeat="fee in assestments">
								<td>{{fee.typeOfFee}}</td>
								<td><span>P</span>10,000</td>
								<td><show-fees ng-click="viewFees(fee._id)"></show-fees></td>
							</tr>
						</tbody>
					</table>
				</div>
			</article>
		</div>
	</div>
	<div class="curriculum_year">
		<div class="btn--close curriculum--overlayClose">X</div>
		<div class="input_groups">
			<label for="">Year</label>
			<input type="text" class="input_units" ng-model="curriculum_new.school_year">
		</div>
		<a class="btn pull--right" href="/administrator/curriculum/settings">Next</a>
	</div>
	<div ng-include="'/views/footer.ejs'"></div>
	
<script src="/lib/jquery-2.1.4.min.js"></script>
<script src="/lib/angular.min.js"></script>
<script src="/js/controllers/assestmentsCtrl.js"></script>
<script src="/js/sideBarFixed.js"></script>
<script src="/js/admin.js"></script>
</body>
</html>